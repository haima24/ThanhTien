@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Các Danh Mục</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Chỉnh Sửa Thông Tin Danh Mục
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <p>
                    <button type="button" id="btnCreateCategory" class="btn btn-primary">Tạo</button>
                </p>
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="category-datatable">
                        <thead>
                            <tr>
                                <th style="width: 70px;">Chi Tiết</th>
                                <th>Tên Danh Mục</th>
                                <th style="width: 50px;">Mới</th>
                                <th style="width: 200px;">Thao Tác</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
        @Html.Partial("DetailCategory")
    </div>
   
</div>
<!-- /.row -->
<!-- Modal -->
@Html.Partial("NewCategory")
@Html.Partial("EditCategory")

@section scripts
{
    <script src="@Url.Content("~/Scripts/app/admin/category.js")"></script>
}
