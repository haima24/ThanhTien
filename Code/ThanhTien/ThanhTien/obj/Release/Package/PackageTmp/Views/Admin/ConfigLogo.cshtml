@{
    ViewBag.Title = "ConfigLogo";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model ThanhTien.App_Data.Config
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Cấu Hình Chung</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Logo
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <form id="logoDropzone" class="dropzone"><img width="250" height="100" src="@Url.Content(Model.ConfigValue)" /></form>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
   
</div>
<!-- /.row -->
@section styles
{
    <link href="@Url.Content("~/Content/dropzone/dropzone.css")" rel="stylesheet" />
}
@section scripts
{
    <script src="@Url.Content("~/Content/dropzone/dropzone.js")"></script>
    <script src="@Url.Content("~/Scripts/app/admin/config.js")"></script>
}